<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/contact_public_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="ghoahepagds;jfg/lasjdfli-egs="
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            tools:text="publicKey" />

        <requestFocus />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/contact_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/primary_text"
            app:errorTextAppearance="@style/EditTextErrorAppearance"
            app:hintTextAppearance="@style/ContactEditTextHint">

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/placeholder_contact_name"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="@color/primary_text"
                android:theme="@style/ContactEditTextColorControl" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <Button
                    android:id="@+id/update_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="update" />

                <Button
                    android:id="@+id/delete_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="delete" />

            </LinearLayout>

            <Button
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_below="@id/buttons"
                android:background="@drawable/button_send" />
        </RelativeLayout>

    </LinearLayout>
</layout>